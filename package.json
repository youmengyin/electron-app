{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "An Electron application with Vue and TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "type": "commonjs",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "chcp 65001 &&electron-vite dev",
    "syncSchema": "drizzle-kit push",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "utils": "tsx ./scripts/utils",
    "rebuild:drizzle": "pnpm rebuild better-sqlite3",
    "rebuild:electron": "electron-rebuild -f -w better-sqlite3-electron && electron-builder install-app-deps",
    "syncSchema-old": "pnpm rebuild:drizzle && pnpm drizzle-kit push && pnpm rebuild:electron",
    "db:studio": "chcp 65001 && npx cross-env ELECTRON_RUN_AS_NODE=1 pnpm exec electron ./node_modules/drizzle-kit/bin.cjs studio",
    "db:push": "chcp 65001 && npx cross-env ELECTRON_RUN_AS_NODE=1 pnpm exec electron ./node_modules/drizzle-kit/bin.cjs push",
    "db:generate": "chcp 65001 && npx cross-env  ELECTRON_RUN_AS_NODE=1 pnpm exec electron ./node_modules/drizzle-kit/bin.cjs generate",
    "db:migrate": "chcp 65001 && npx cross-env ELECTRON_RUN_AS_NODE=1 pnpm exec electron ./node_modules/drizzle-kit/bin.cjs migrate"
  },
  "dependencies": {
    "@arco-design/web-vue": "^2.57.0",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "better-sqlite3": "^12.0.0",
    "better-sqlite3-multiple-ciphers": "^12.2.0",
    "drizzle-orm": "^0.44.2",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "@arco-plugins/vite-vue": "^1.4.5",
    "@electron-toolkit/eslint-config-prettier": "3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/rebuild": "^4.0.1",
    "@ntnyq/eslint-config": "^4.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.14.1",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vueuse/core": "^13.3.0",
    "@whbw/eslint-config": "^1.0.1",
    "drizzle-kit": "^0.31.1",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-vue": "^10.0.0",
    "pinia": "^3.0.2",
    "prettier": "^3.5.3",
    "tinyexec": "^1.0.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "unplugin-auto-import": "^19.3.0",
    "unplugin-vue-components": "^28.7.0",
    "vite": "^6.2.6",
    "vue": "^3.5.13",
    "vue-eslint-parser": "^10.1.3",
    "vue-router": "^4.5.1",
    "vue-tsc": "^2.2.8"
  }
}
